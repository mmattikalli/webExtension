
{
  "name": "WebAssist",
  "author": "Microsoft Edge Extension Developer",
  "version": "1.1",
  "description": "Assistance for your web browser",
  "permissions": [
    "*",
    "tabs"
  ], 
  "browser_action": {
    "default_icon": {
      "20": "images/blankPerson.png",
      "40": "images/blankPerson.png"
    },
    "default_title": "WebAssist",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [{
    "matches": [
        "<all_urls>"
    ],
    "js": ["js/content.js"],
    "run_at": "document_end"
}],
"background": {
  "scripts": ["js/background.js"],
  "persistent": true
}
}