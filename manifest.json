{
  "name": "WebAssist",
  "author": "Microsoft Edge Extension Developer",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Assistance for your web browser",
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTabs",
    "videoCapture"
  ],
  "browser_action": {
    "default_icon": {
      "20": "./images/logo4.png",
      "40": "./images/logo4.png"
    },
    "default_title": "WebAssist",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "page": "html/background.html",
    "persistent": true
  }
}
